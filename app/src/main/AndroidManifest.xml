<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maximus.vitaminreminder">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_colory_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".addedittask.AddActivity"
            android:parentActivityName=".tasks.TasksActivity"/>
        <activity android:name=".tasks.TasksActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pref.SettingsActivity"
            android:parentActivityName=".tasks.TasksActivity"/>
        <receiver android:name=".timepicker.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <!--<action android:name="android.intent.action.QUICKBOOT_POWERON"/>-->
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!--<service android:name=".sync.VitaminReminderIntentService">-->
